<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Task.
    -->
    <changeSet id="20190703112216-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="milestone_id"
                                 baseTableName="task"
                                 constraintName="fk_task_milestone_id"
                                 referencedColumnNames="id"
                                 referencedTableName="milestone"/>

        <addForeignKeyConstraint baseColumnNames="task_id"
                                 baseTableName="task_user"
                                 constraintName="fk_task_user_task_id"
                                 referencedColumnNames="id"
                                 referencedTableName="task"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="task_user"
                                 constraintName="fk_task_user_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>
        
    </changeSet>
</databaseChangeLog>
